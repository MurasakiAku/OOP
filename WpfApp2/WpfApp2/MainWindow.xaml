        <Label Content="Пол&#xA;" HorizontalAlignment="Left" Margin="320,153,0,0" VerticalAlignment="Top" Width="98" Height="26" Grid.Row="1"/>
        <TextBox HorizontalAlignment="Left" Height="29" Margin="154,247,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="264" TextChanged="TextBox_TextChanged" Grid.Row="1"/>
        <Label Content="Квартира" HorizontalAlignment="Left" Margin="257,365,0,0" VerticalAlignment="Top" Width="78" Height="26" Grid.Row="1"/>
