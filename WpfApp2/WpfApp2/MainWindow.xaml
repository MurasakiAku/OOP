        <TextBox HorizontalAlignment="Left" Height="30" Margin="154,361,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" TextChanged="TextBox_TextChanged" Grid.Row="1"/>
        <TextBox HorizontalAlignment="Left" Height="30" Margin="348,361,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" TextChanged="TextBox_TextChanged" Grid.Row="1"/>

    </Grid>
</Window>
