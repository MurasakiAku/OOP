<Window x:Class="WpfApp2.WellcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" d:DesignWidth="500"
      Title="WellcomePage" Height="400">

    <Grid>
        
        <Border MinWidth="400" Margin="10" MaxWidth="500" Padding="30" CornerRadius="20" Background="White">
            <StackPanel>
                <TextBlock Text="Персонал" FontSize="48" FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Right"></TextBlock>
                <Grid Margin="0 10" >
                    <Button x:Name="NewPerson" Content="Создать" HorizontalAlignment="Left" Height="52" Width="169" Margin="0 0 0 100" Click="Button_Click"/>
                    <Button Content="Редактировать" HorizontalAlignment="Left" Height="52" Width="169" VerticalAlignment="Top" Margin="0 100 0 50" Click="Button_Click_2" />
                    <Button Content="Просмотр" HorizontalAlignment="Right" Height="52" Width="169" VerticalAlignment="Bottom" Style="{StaticResource MaterialDesignFlatButton}" Click="Button_Click_1" />
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
