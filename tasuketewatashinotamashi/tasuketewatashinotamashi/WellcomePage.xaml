<Page x:Class="tasuketewatashinotamashi.WellcomePage"
          
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tasuketewatashinotamashi"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" d:DesignWidth="500"
      Title="WellcomePage" Height="400">

    <Grid>

        <Border MinWidth="400" Margin="10" MaxWidth="500" Padding="30" CornerRadius="20" Background="#f2f6f0">
            <StackPanel>
                <TextBlock Text="Персонал" FontSize="48" FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Right" FontFamily="Arial"></TextBlock>
                <Grid Margin="0 10 ">
                    <Button x:Name="NewPerson" Content="Создать" HorizontalAlignment="Center" Height="40" Width="169" Margin="0 -100 0 0" Click="Button_Click" FontSize="15" FontFamily="Arial" Background="#ffb134"/>
                    <Button x:Name="EditForm" Content="Редактировать" HorizontalAlignment="Center" Height="40" Width="168" VerticalAlignment="Top" Margin="0,90,0,0" Click="Button_Click_2" FontSize="15" Background="#ffb134" FontFamily="Arial" />
                    <Button x:Name="LookPage" Content="Просмотр" HorizontalAlignment="Center" Height="40" Width="169" VerticalAlignment="Bottom" Margin="0 150 0 10" Click="Button_Click_1" FontSize="15" FontFamily="Arial" Background="#c9fa63" />
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Page>
